{
  "manifest_version": 3,
  "name": "BOJ Addon",
  "version": "1.0.7",
  "description": "BOJ Addon",
  "author": "Namheon Baek",

  "content_scripts": [
    {
      "css": ["style.css"],
      "js": ["main.js"],
      "matches": [
        "https://www.acmicpc.net/problem/*",
        "https://*/contest/problem/*"
      ],
      "exclude_matches": [
        "https://www.acmicpc.net/problem/status/*",
        "https://www.acmicpc.net/problem/history/*"
      ]
    }
  ],
  "type": "module"
}
